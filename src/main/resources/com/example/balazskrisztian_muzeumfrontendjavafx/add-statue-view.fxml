<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.balazskrisztian_muzeumfrontendjavafx.Controllers.AddStatueController">
<columnConstraints>
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="200.0" />
</columnConstraints>
<rowConstraints>
    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
</rowConstraints>
<children>
    <TextField fx:id="tfPerson" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin></TextField>
    <Label text="Személy:">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin></Label>
    <Label text="Magasság:" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin></Label>
    <Label text="Ár:" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin></Label>
    <Button fx:id="btnAddStatue" minWidth="100.0" mnemonicParsing="false" onAction="#addStatueClick" prefWidth="200.0" text="Hozzáadás" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin></Button>
    <Spinner fx:id="spHeight" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory max="1000" min="0" />
        </valueFactory>
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
    </Spinner>
    <Spinner fx:id="spPrice" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory max="1000000" min="0" />
        </valueFactory>
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
    </Spinner>
</children>
</GridPane>
